name:         ebeats
version:      0.0.1
category:     Time
synopsis:     Time in ebeats
description:  Time in ebeats. See <http://ebeats.org/>.
author:       Brian Lewis <brian@lorf.org>, Ian Taylor <ian@lorf.org>
maintainer:   Brian Lewis <brian@lorf.org>, Ian Taylor <ian@lorf.org>
license:      BSD3
license-file: LICENSE

cabal-version: >= 1.6
build-type:    Simple

library
  hs-source-dirs:
    src

  exposed-modules:
    Data.Time.Ebeats

  build-depends:
    base >= 3 && < 5,
    time == 1.2.*

  ghc-options: -Wall
  if impl(ghc >= 6.8)
    ghc-options: -fwarn-tabs

source-repository head
  type: git
  location: git://github.com/bsl/ebeats.git
